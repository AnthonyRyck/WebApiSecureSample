@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@using WebApiSecureSample.Data

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Login"></label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="Input.RoleUser"></label>
				<select asp-for="Input.RoleUser" asp-items="Html.GetEnumSelectList<Role>()">
					<option selected="selected" value="">Choisir un rôle</option>
				</select>
				<span asp-validation-for="Input.RoleUser" class="text-danger"></span>
    		</div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <div>
            Mettre à l'utilisateur le "SansRole" fait qu'il n'est qu'un utilisateur.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
